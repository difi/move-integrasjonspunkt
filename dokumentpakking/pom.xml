<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <artifactId>dokumentpakking</artifactId>
  <version>0.1-SNAPSHOT</version>

  <parent>
    <groupId>no.difi.meldingsutveksling</groupId>
    <artifactId>parent-pom</artifactId>
    <version>1.0-SNAPSHOT</version>
    <relativePath/>
  </parent>

  <properties>
    <apache.commons.version>1.10</apache.commons.version>
    <spring.xml.version>2.2.2.RELEASE</spring.xml.version>
    <spring.oxm.version>4.2.1.RELEASE</spring.oxm.version>
    <commons.asic.version>0.9.1</commons.asic.version>
    <adresseregister.domain.version>1.0-SNAPSHOT</adresseregister.domain.version>
  </properties>

  <dependencies>
    <dependency>
      <groupId>no.difi.meldingsutveksling</groupId>
      <artifactId>adresseregister-domain</artifactId>
      <version>${adresseregister.domain.version}</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>xml-apis</artifactId>
          <groupId>xml-apis</groupId>
        </exclusion>
      </exclusions>
    </dependency>

    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-compress</artifactId>
      <version>${apache.commons.version}</version>
    </dependency>

    <dependency>
      <groupId>org.springframework.ws</groupId>
      <artifactId>spring-xml</artifactId>
      <version>${spring.xml.version}</version>
    </dependency>

    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-oxm</artifactId>
      <version>${spring.oxm.version}</version>
    </dependency>

    <dependency>
      <groupId>no.difi.meldingsutveksling</groupId>
      <artifactId>domain</artifactId>
    </dependency>

    <dependency>
      <groupId>commons-io</groupId>
      <artifactId>commons-io</artifactId>
    </dependency>

    <dependency>
      <groupId>commons-codec</groupId>
      <artifactId>commons-codec</artifactId>
    </dependency>

    <dependency>
      <groupId>com.thoughtworks.xstream</groupId>
      <artifactId>xstream</artifactId>
    </dependency>

    <dependency>
      <groupId>joda-time</groupId>
      <artifactId>joda-time</artifactId>
    </dependency>

    <dependency>
      <groupId>org.bouncycastle</groupId>
      <artifactId>bcpkix-jdk15on</artifactId>
    </dependency>

    <dependency>
      <groupId>org.bouncycastle</groupId>
      <artifactId>bcprov-jdk15on</artifactId>
      <version>${bouncycastle.version}</version>
    </dependency>

    <dependency>
      <groupId>no.difi.commons</groupId>
      <artifactId>commons-asic</artifactId>
      <version>${commons.asic.version}</version>
    </dependency>

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
    </dependency>

    <dependency>
      <groupId>org.hamcrest</groupId>
      <artifactId>hamcrest-all</artifactId>
    </dependency>

    <dependency>
      <groupId>org.mockito</groupId>
      <artifactId>mockito-all</artifactId>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.2</version>
        <configuration>
          <source>1.7</source>
          <target>1.7</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>properties-maven-plugin</artifactId>
        <version>1.0-alpha-2</version>
        <executions>
          <execution>
            <id>set-additional-system-properties</id>
            <goals>
              <goal>set-system-properties</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <properties>
            <property>
              <name>javax.xml.accessExternalSchema</name>
              <value>all</value>
            </property>
            <property>
              <name>javax.xml.accessExternalDTD</name>
              <value>all</value>
            </property>
          </properties>
          <outputFile/>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>jaxb2-maven-plugin</artifactId>
        <version>1.6</version>
        <executions>
          <execution>
            <id>xjc-xades</id>
            <goals>
              <goal>xjc</goal>
            </goals>
            <configuration>
              <schemaFiles>XAdES.xsd</schemaFiles>
              <packageName>no.difi.meldingsutveksling.dokumentpakking.xades</packageName>
            </configuration>
          </execution>
          <execution>
            <id>xjc-kvit</id>
            <goals>
              <goal>xjc</goal>
            </goals>
            <configuration>
              <schemaFiles>sdp-kvittering.xsd</schemaFiles>
              <packageName>no.difi.meldingsutveksling.dokumentpakking.kvit</packageName>
              <clearOutputDir>false</clearOutputDir>
            </configuration>
          </execution>
          <execution>
            <id>xjc-asice</id>
            <goals>
              <goal>xjc</goal>
            </goals>
            <configuration>
              <schemaFiles>ts_102918v010201.xsd</schemaFiles>
              <packageName>no.difi.meldingsutveksling.dokumentpakking.asice</packageName>
              <clearOutputDir>false</clearOutputDir>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>